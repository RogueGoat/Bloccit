<h1><% @questions.title %></h1>
<p><% @questions.body %></p>
<p><% @questions.resolved %></p>



<div class = "col-md-4">
    <% link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <% link_to "Delete", @question, method: :delete, class: 'btn btn-danger'
    data: { confirm: "Are you SURE you want to delete this question?"} %>
</div>